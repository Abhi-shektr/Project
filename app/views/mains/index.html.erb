<% @products.each do |product| %>
  <% if product.quantity.present? %>
    <section style="background-color: #eee;">
      <div class="container py-5">
        <div class="row justify-content-center mb-3">
          <div class="col-md-12 col-xl-10">
            <div class="card shadow-0 border rounded-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                      <% if product.image.attached? %>
                          <%= image_tag(product.image, class: "image")%>
                      <% end%>
                      <a href="#!">
                        <div class="hover-overlay">
                          <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                        </div>
                      </a>
                    </div>
                  </div>
                  <div class="col-md-6 col-lg-6 col-xl-6">
                    <h5><strong><%= product.name %></strong></h5>
                    <div class="d-flex flex-row">
                      <div class="text-success mb-1 me-2">
                        <i class="fa fa-star">Available</i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                      </div>
                    </div>
                    <p class="text-truncate mb-4 mb-md-0">
                        <%= product.desc %>
                    </p>
                    <p>Seller:
                        <%= product.seller.name %>
                    </p>
                  </div>
                  <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                    <div class="d-flex flex-row align-items-center mb-1">
                        <h4 class="mb-1 me-1">₹<%= product.price %></h4>
                    </div>
                    <h6 class="text-success">Free shipping</h6>
                    <div class="d-flex flex-column mt-4">
                        <%= link_to 'Show', product_path(product), class:"btn btn-primary btn-sm" %>
                        <%= link_to 'Add to cart' ,login_users_path, class:"btn btn-success btn-sm mt-2"%>
                        
                    </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>   
    </section>
  <%else%>
    <section style="background-color: #eee;">
      <div class="container py-5">
        <div class="row justify-content-center mb-3">
          <div class="col-md-12 col-xl-10">
            <div class="card shadow-0 border rounded-3">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                      <% if product.image.attached? %>
                          <%= image_tag(product.image, class: "image")%>
                      <% end%>
                      <a href="#!">
                        <div class="hover-overlay">
                          <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                        </div>
                      </a>
                    </div>
                  </div>
                  <div class="col-md-6 col-lg-6 col-xl-6">
                    <h5><strong><%= product.name %></strong></h5>
                    <div class="d-flex flex-row">
                      <div class="text-danger mb-1 me-2">
                        <i class="fa fa-star">Out of stock</i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                        <i class="fa fa-star"></i>
                      </div>
                    </div>
                    <p class="text-truncate mb-4 mb-md-0">
                        <%= product.desc %>
                    </p>
                    <p>Seller:
                        <%= product.seller.name %>
                    </p>
                  </div>
                  <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                    <div class="d-flex flex-row align-items-center mb-1">
                        <h4 class="mb-1 me-1">₹<%= product.price %></h4>
                    </div>
                    <h6 class="text-success">Free shipping</h6>
                    <div class="d-flex flex-column mt-4">
                        <%= link_to 'Show', product_path(product), class:"btn btn-primary btn-sm" %>
                        <%= link_to 'Out of stock',root_path, class:"btn btn-danger btn-sm mt-2"%>
                        
                    </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>   
    </section>
  <% end %>
<% end %>


