<br><h2 style="width:50%; margin-left:380px; font-family:serif;"><b>User SignUp</b></h2><br>

<div  style="width:50%; margin-left:200px;margin-top:10px">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field form-group">
          <%= f.text_field :name, autofocus: true, autocomplete: "name",class:"form-control",placeholder:"Name" %>
      </div><br />

      <div class="field form-group">
        <%= f.text_field :phone, autofocus: true, autocomplete: "phone",class:"form-control",placeholder:"Phone"%>
      </div><br />

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder:"Email"%>
      </div><br />

      <div class="field form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"form-control",placeholder:"Password" %>
      </div>
      <div>
        <%= f.submit :SignUp,class:"btn btn-success",style:"border: none;border-radius:5px;outline: 0;padding: 12px;text-align: center;cursor: pointer;width: 50%;font-size: 15px;margin-left:150px;margin-top:30px" %>
      </div>
    <% end %>
  </div>
