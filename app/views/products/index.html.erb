<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
  <%if user_signed_in? %>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        
        <td><%= product.desc %></td>
        
        <td><%= product.price %></td>

        <td><%= link_to 'Show', product_path(product),class:"btn btn-primary btn-sm" %></td>
