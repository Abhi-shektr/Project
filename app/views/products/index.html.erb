<nav class="navbar navbar-default ">
	<div class="container-fluid">
		<div class="navbar-header">
			<h7 class="navbar-brand" >
					<b>Products</b>
			</h7>
		</div>
	</div>
</nav>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
    </tr>
  </thead>
  <tbody>
  <%if user_signed_in? %>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        
        <td><%= product.desc %></td>
        
        <td><%= product.price %></td>

        <td><%= form_with  do |form| %>
            <%= form.number_field :@qty, in: 1..20, step: 1 %>
        </td>
        <td><%= form.submit :Update,class:"btn btn-secondary btn-sm" %></td>
        <%end%>
        <td><%= link_to 'Show', product_path(product),class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Add to Cart', insert_carts_path(:user_id => current_user.id,:product_id => product.id,:qty => @qty),:method => :post,class:"btn btn-primary btn-sm" %></td> 
      </tr>
    <% end %>
    <%else%>
      <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        
        <td><%= product.desc %></td>
        
        <td><%= product.price %></td>

        <td><%= form_with  do |form| %>
            <%= form.number_field :@qty, in: 1..20, step: 1,value: 1 %>
        </td>
        <td><%= form.submit :Update,class:"btn btn-secondary btn-sm" %></td>
        <%end%>
        <td><%= link_to 'Show', product_path(product),class:"btn btn-primary btn-sm" %></td> 
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= link_to 'Go to Cart', cart_path(current_user),class:"btn btn-primary btn-sm" %>