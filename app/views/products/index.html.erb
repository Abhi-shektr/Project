<%if user_signed_in?%>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
      </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          
          <td><%= product.desc %></td>
          
          <td>₹<%= product.price %></td>

          <td><%= link_to 'Show', product_path(product),class:"btn btn-primary btn-sm" %></td>
          <td><%= link_to 'Add to Cart', insert_carts_path(:user_id => current_user.id,:product_id => product.id),:method => :post,class:"btn btn-primary btn-sm"%></td> 
        </tr>
        <%end%>
    </tbody>
  </table>
  <%= link_to 'Go to Cart', cart_path(current_user),class:"btn btn-success btn-sm" %>
<%else%>
  <table class="table", style="font-family:serif;">
    <thead>
      <tr>
        <th scope="col">  </th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Stock</th>
        <th scope="col">Price    </th>
        <th scope="col">  </th>
        <th scope="col">  </th>
        <th scope="col">  </th>
      </tr>
    </thead>
    <tbody>
      <% current_seller.products.each do |product| %>
      <tr>
          <% if product.image.attached? %>
              <td><%= image_tag(product.image, class:"image")%></td>  
          <% end %>
        <td><%= product.name %></td>
        <td><%= product.desc %></td>
        <td><%= product.quantity %></td>
        <td>₹<%= product.price %></td> 
        
        <td><%= link_to 'Show', product_path(product) ,class:"btn btn-primary btn-sm"%></td>
        <td><%= link_to 'Update', edit_product_path(product),class:"btn btn-primary btn-sm" %></td>
        <td><%= button_to  'remove', product_path(product),
                method: :delete,
                data: { confirm: 'Are you sure?' } ,class:"btn btn-danger btn-sm"%></td> 
      </tr>
    <% end %>
    </tbody>
  </table>
  <%=link_to 'Add new Product', new_product_path(:seller_id => params[:id]),class: "btn btn-primary" %>
<%end%>
<% if flash %>
    <p class="notice text-success mt-4"><%= notice %></p>
  <% end %>